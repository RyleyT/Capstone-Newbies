<head>
    <link href="/css/custom.css" rel="stylesheet" type = "text/css"/>
</head>

<h2 class ="center">Users Table</h2>
        <table class = "table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Password</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                    <tr>
                        <td>
                            <a href="<%=`users/${user._id}` %>">
                                <%= user.username %>
                            </a> 
                        </td>
                        <td>
                            <a href="<%=`users/${user._id}` %>">
                                <%= user.email %>
                            </a> 
                        </td>
                        <td>
                            <a href="<%=`users/${user._id}` %>">
                                <%= user.password %>
                            </a> 
                        </td>
                        <td>
                            <a href="<%= `users/${user._id}/delete?_method=DELETE` %>" 
                            onclick="return confirm('Are you sure you want to delete this record?')"
                            > Delete </a>
                        </td>
                        <!-- <td>
                            <a href="<%=`users/${user._id}/edit` %>">
                                Edit
                            </a> 
                        </td> -->
                    </tr>
                    <% }); %>
            </tbody> 
        </table>